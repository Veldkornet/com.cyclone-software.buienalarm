                }
              },
              {
                "id": "45",
                "label": {
                  "en": "45 minutes",
                  "nl": "45 minuten"
                }
              },
              {
                "id": "60",
                "label": {
                  "en": "1 hour",
                  "nl": "1 hour"
                }
              },
              {
                "id": "90",
                "label": {
                  "en": "1.5 hours",
                  "nl": "1.5 uur"
                }
              },
              {
                "id": "120",
                "label": {
                  "en": "2 hours",
                  "nl": "2 uur"
                }
              }
            ]
          }
        ]
      },
